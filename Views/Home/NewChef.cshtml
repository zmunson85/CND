@{
    ViewData["Title"] = "New Chef";
}
@model Chef

<div class="container pt-5">
    <h1 class="text-center">Add a Chef!</h1>
    <a asp-action="Index">Home</a>

    <form asp-action="CreateChef" method="POST">
        <div class="row mt-5">
            <div class="form-group col-3">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName">
                <span asp-validation-for="FirstName" class="text-danger font-weight-bold"></span>
            </div>

            <div class="form-group col-3">
                <label asp-for="DOB"></label>
                <input asp-for="DOB">
                <span asp-validation-for="DOB" class="text-danger font-weight-bold"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-3">
                <label asp-for="LastName"></label>
                <input asp-for="LastName">
                <span asp-validation-for="LastName" class="text-danger font-weight-bold"></span>
            </div>

            <div class="col-3">
                <button type="submit" class="btn btn-success">Add Chef</button>
            </div>
        </div>
    </form>
</div>