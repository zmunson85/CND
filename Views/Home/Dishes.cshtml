@{
    ViewData["Title"] = "Dishes";
}
@model List<Dish>

<div class="container pt-5">
    <div class="row">
        <div class="col-10">
            <h1 class="text-center">
                <a asp-action="Index">Chefs</a> | Dishes
            </h1>
        </div>

        <div class="col-2">
            <a asp-action="NewDish">Add a Dish</a>
        </div>
    </div>

    <div class="border-bottom border-dark">
        <h3>Yum, take a look at our tasty dishes!</h3>
    </div>

    <div class="row">
        <div class="col-8">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Chef</th>
                        <th scope="col">Tastiness</th>
                        <th scope="col">Calories</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Dish dish in Model)
                    {
                        <tr>
                            <td>@dish.Name</td>
                            <td>@dish.Creator.FirstName @dish.Creator.LastName</td>
                            <td>@dish.Tastiness</td>
                            <td>@dish.Calories</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>